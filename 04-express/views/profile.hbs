
<div class="row">
	<div class="col-md-2"></div>
	
	<div class="col-md-8">

		<form class="form-horizontal" method="POST">



			<fieldset>

				<legend>{{title}}</legend>
				<div class="form-group">
					<label for="firstname" class="col-sm-2 control-label">Ad</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="firstname" name="firstname" placeholder="Ad覺n覺z" value="{{firstname}}">
					</div>
				</div>
				<div class="form-group">
					<label for="lastname" class="col-sm-2 control-label">Soyad</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Soyad覺n覺z" value="{{lastname}}">
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="col-sm-2 control-label">E-Posta</label>
					<div class="col-sm-8">
						<input type="email" class="form-control" id="email" name="email" placeholder="E-Posta adresiniz" value="{{email}}">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-8">
						<button type="submit" class="btn btn-default">Kaydet</button>
					</div>

				</div>

			</fieldset>

		</form>

	</div>

</div>

{{#message}}
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<div class="alert alert-success" role="alert">{{.}}</div>
		</div>
	</div>
{{/message}}
